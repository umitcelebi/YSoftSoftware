@model Personel

@{
    ViewData["Title"] = "Create Personel";
}

<form asp-controller="Personel" asp-action="Create" method="post">
    

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name">
        <div><span class="text-danger" asp-validation-for="Name"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input class="form-control" asp-for="Phone">
        <div><span class="text-danger" asp-validation-for="Phone"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input class="form-control" asp-for="Salary">
        <div><span class="text-danger" asp-validation-for="Salary"></span></div>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="form-label">Department</label>
        <select class="form-control" asp-for="DepartmentId" asp-items="ViewBag.Department">
            <option disabled>Select Department</option>
        </select>
        <div><span class="text-danger" asp-validation-for="DepartmentId"></span></div>
    </div>


    <div class="form-group">
        <label asp-for="AccountingProgram" class="form-label">Accounting Program</label>
        <select class="form-control" asp-for="AccountingProgramId" asp-items="ViewBag.Program">
            <option disabled>Select According Program</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

