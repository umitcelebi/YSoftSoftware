@model Personel

@{
    ViewData["Title"] = "Edit Personel";
}


<div class="card">
    <div class="card-header">
        <h5>@Model.Name</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Phone</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>According Program</th>
                    <th>Status</th>
                    <th>Start Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Phone</td>
                    <td>@Model.Salary</td>
                    <td>@Model.Department.DepartmentName</td>
                    @if (Model.AccountingProgram != null)
                    {
                        <td>@Model.AccountingProgram.Name</td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td>@Model.Status</td>
                    <td>@Model.StartDate</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-muted">
        <a asp-controller="Personel" asp-action="Dismiss" asp-route-personelId="@Model.PersonelId" class="btn btn-warning">İşten Çıkart</a>
    </div>
</div>