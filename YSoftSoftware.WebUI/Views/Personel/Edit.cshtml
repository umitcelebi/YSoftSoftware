@model Personel

@{
    ViewData["Title"] = "Edit Personel";
}

<form asp-controller="Personel" asp-action="Edit">
    
    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="PersonelId"/>
    <input type="hidden" asp-for="Status"/>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input class="form-control" asp-for="Phone">
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input class="form-control" asp-for="Salary">
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="form-label">Department</label>
        <select class="form-control" asp-for="DepartmentId" asp-items="ViewBag.Department">
            <option disabled>Select Department</option>
        </select>
    </div>
    
    <div class="form-group">
        <label asp-for="AccountingProgram" class="form-label">Accounting Program</label>
        <select class="form-control" asp-for="AccountingProgramId" asp-items="ViewBag.Program">
            <option disabled>Select According Program</option>
        </select>
    </div>
    
    

    <button type="submit" class="btn btn-primary">Submit</button>
</form>